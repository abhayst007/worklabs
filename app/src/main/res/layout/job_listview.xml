<?xml version="1.0" encoding="utf-8"?><!--suppress AndroidUnresolvableTag -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:outlineSpotShadowColor="@color/text_grey"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">


        <LinearLayout
            android:id="@+id/compare_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp">


            <TextView
                android:id="@+id/job_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JAVA Developer"
                android:textColor="@color/app_orange"
                android:textFontWeight="700"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/job_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/office_svgrepo_com"
                android:drawablePadding="8dp"
                android:text="JS TechAlliance Consulting Pvt Ltd."
                android:textColor="@color/text_secondary"
                android:textFontWeight="400"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/job_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/twotone_location_on_24"
                android:drawablePadding="8dp"
                android:text="Indore, Madhya Pradesh"
                android:textColor="@color/text_secondary"
                android:textFontWeight="400"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/job_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20000 - 4000020000 - 4000020000 - 4000020000 - 4000020000 - 4000020000 - 4000020000 - 4000020000 - 40000"
                android:textColor="@color/text_grey"
                android:textFontWeight="400"
                android:layout_marginVertical="10dp"
                android:lineHeight="13dp"
                android:textSize="13sp" />



            <Button
                android:id="@+id/job_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#ECECEC"
                android:fontFamily="monospace"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="Apply Now"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="12sp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>